<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="30px"
    android:paddingLeft="120px">

    <LinearLayout
        android:layout_marginTop="35px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="上行带宽"
                android:layout_centerHorizontal="true"
                android:textColor="#61000000"
                android:textSize="38px" />

            <TextView
                android:id="@+id/bandwith"
                android:layout_below="@+id/tv001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_alignLeft="@+id/tv001"
                android:gravity="center"
                android:text="Mbps"
                android:textColor="@color/black"
                android:textSize="45px" />
        </RelativeLayout>

        <View
            android:layout_width="2px"
            android:layout_height="40px"
            android:layout_gravity="center_vertical"
            android:background="@color/lineColorGray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="存储"
                android:layout_centerHorizontal="true"
                android:textColor="#61000000"
                android:textSize="38px" />

            <TextView
                android:id="@+id/diskAll"
                android:layout_alignLeft="@+id/tv002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv002"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:text="TB"
                android:textColor="@color/black"
                android:textSize="45px" />
        </RelativeLayout>

        <View
            android:layout_width="2px"
            android:layout_height="40px"
            android:layout_gravity="center_vertical"
            android:background="@color/lineColorGray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv003"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="今日出币"
                android:textColor="#61000000"
                android:layout_centerHorizontal="true"
                android:textSize="38px" />

            <TextView
                android:id="@+id/todayCoin"
                android:layout_below="@+id/tv003"
                android:layout_alignLeft="@+id/tv003"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:text=" 枚"
                android:textColor="@color/black"
                android:textSize="45px" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="65px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jiebang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="解绑"
            android:textColor="#FF3174B2"
            android:textSize="45px" />

        <TextView
            android:id="@+id/rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重命名"
            android:textColor="@color/mainColor"
            android:textSize="45px" />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="开启"
            android:textColor="@color/mainColor"
            android:textSize="45px" />

        <TextView
            android:id="@+id/offwifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关闭WiFi"
            android:textColor="@color/mainColor"
            android:textSize="45px" />
    </LinearLayout>

</LinearLayout>