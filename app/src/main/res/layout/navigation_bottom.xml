<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="190px"
    android:layout_alignParentBottom="true"
    android:background="@color/mainColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lineColorGray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/tab1"
                android:onClick="onClick"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20px"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@mipmap/ic_tab1"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_pre_01"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@mipmap/ic_tab1_show"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:textSize="30px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_tab_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:textColor="@color/white"
                    android:text="首页"
                    android:textSize="30px"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab3"
                android:onClick="onClick"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20px"
                android:layout_weight="1.5">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab4"
                android:onClick="onClick"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20px"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@mipmap/ic_tab4"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_pre_04"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@mipmap/ic_tab4_show"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:textSize="30px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_tab_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:text="我的"
                    android:textSize="30px"/>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>